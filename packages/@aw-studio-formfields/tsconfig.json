{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
      "node_modules"
  ],
}